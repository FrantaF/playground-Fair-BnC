<%= render partial: "navbar" %>

<div class="container" style="padding-top: 150px">
  <div class="row" id="home-page-title">
    <div>
      <h1 class="text-align">Experience Bed & Coffee &nbsp;<small class="text-muted"> Comfortably - Any where around the world!</small></h1>
    </div>
  </div>
  <div class="row list-group">
    <% @listings.each do |list| %>
      <a href="/users/<%=list.user_id%>/listings/<%=list.id%>">
      <div class="item col-lg-4" style="min-height: 450px;">
        <div class="thumbnail">
          <%= image_tag("fairbnc-room-photo.jpg") %>
          <div class="caption">
            <p class="group inner list-group-item-text"><%=list.property_type%> &middot; <%= list.bed_number %> BEDS &middot; <%= list.country %></p>
            <h2 class="group inner list-group-item-heading"><%= list.name %></h2>
            <p class="group inner list-group-item-text"><%= list.description %></p>
            <div class="row">
              <div class="col-xs-12 col-md-12">
                <p class="lead">From MYR<%=list.price%> per night</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </a>
    <% end %>
  </div>
  <div class="text-center" style="font-size:1.75em;"><%= paginate @listings %></div>
</div>

<%= render partial: "footer" %>
